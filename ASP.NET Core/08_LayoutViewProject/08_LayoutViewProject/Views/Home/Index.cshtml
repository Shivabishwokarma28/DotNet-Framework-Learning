@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - MyWebsite</title>
    <style>
        /* Reset & body */
        * { margin: 0; padding: 0; box-sizing: border-box; font-family: Arial, sans-serif; }
        body { line-height: 1.6; color: #333; }

        /* Header */
        header { background: #0077cc; }
        nav { display: flex; justify-content: space-between; align-items: center; padding: 20px 50px; }
        .logo { color: white; font-size: 24px; font-weight: bold; }
        .nav-links { list-style: none; display: flex; gap: 20px; }
        .nav-links li a { color: white; text-decoration: none; transition: color 0.3s; }
        .nav-links li a:hover { color: #ffdd57; }

        /* Hero Section */
        .hero { height: 80vh; background: url('https://source.unsplash.com/1600x900/?nature,technology') center/cover no-repeat; display: flex; justify-content: center; align-items: center; text-align: center; color: white; }
        .hero h1 { font-size: 48px; margin-bottom: 20px; }
        .hero p { font-size: 20px; margin-bottom: 30px; }
        .hero .btn { padding: 12px 30px; background: #ffdd57; color: #333; text-decoration: none; border-radius: 5px; font-weight: bold; transition: background 0.3s; }
        .hero .btn:hover { background: #ffc107; }

        /* Footer */
        footer { background: #0077cc; color: white; text-align: center; padding: 20px; }
    </style>
</head>
<body>

    <header>
        <nav>
            <div class="logo">MyWebsite</div>
            <ul class="nav-links">
                <li><a href="Index.cshtml">Home</a></li>
                <li><a href="About.cshtml">About</a></li>
                <li><a href="Contact.cshtml">Contact</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="hero">
            <div>
                <h1>Welcome to My Website</h1>
                <p>This is the home page.</p>
                <a href="about.html" class="btn">Learn More</a>
            </div>
        </section>
    </main>

    <footer>
        <p>&copy; 2026 MyWebsite. All rights reserved.</p>
    </footer>

</body>
</html>

