@model _26_ValidationAttributes.Models.Student
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <form asp-controller="Home" asp-action="Index" method="post">
             <label asp-for="Name"></label>
               <input asp-for="Name" placeholder="Enter Name" class="form-control"/> 
              <h6> <span asp-validation-for="Name" style="color:red;font-size:10px">   </span></h6>
               <br />
               <input asp-for="Email" placeholder="Enter Emali" class="form-control"/>
               <span asp-validation-for="Email" style="color:red; font-size:10px"></span>
               <br />
                <input asp-for="Age" placeholder="Enter Age" class="form-control" />
                <span asp-validation-for="Age" style="color:red; font-size:10px"></span>
                <br />
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password"/>
                <span asp-validation-for="Password" style="color:red;font-size:10px"></span>
                <br />
                <label asp-for="ConformPassword"></label>
                <input type="password" asp-for="ConformPassword" class="form-control" placeholder="Conform Password" />
                <span asp-validation-for="ConformPassword" style="color:red;font-size:10px"></span>
                <br />
                <input type="number" asp-for="Phone" class="form-control" placeholder="Enter Number" />
                <span asp-validation-for="Phone" style="color:red;font-size:10px"></span>
                <br />
                <input asp-for="WebsiteUrl" class="form-control" placeholder="Enter Website Url"/>
                <span asp-validation-for="WebsiteUrl" style="color:red;font-size:10px"></span>
                <br />
               <input type="submit" value="submit" class="btn btn-outline-primary"/>
            </form>
        </div>

    </div>

</div>
